<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_main_cube"
        style="@style/MatchAuto"
        app:banner_pointAutoPlayInterval="1500"
        app:banner_pointContainerHeight="20dp"
        app:banner_pointContainerWidth="match_parent"
        app:banner_pointEdgeSpacing="10dp"
        app:banner_pointFocusedImg="@drawable/point_focused"
        app:banner_pointGravity="bottom|center_horizontal"
        app:banner_pointSpacing="5dp"
        app:banner_pointUnfocusedImg="@drawable/point_unfocused"
        app:banner_pointVisibility="true"
        app:banner_transitionEffect="cube" />

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_main_accordion"
        style="@style/MatchAuto"
        android:layout_marginTop="10dp"
        app:banner_pointAutoPlayInterval="2000"
        app:banner_pointContainerHeight="20dp"
        app:banner_pointContainerWidth="match_parent"
        app:banner_pointEdgeSpacing="10dp"
        app:banner_pointFocusedImg="@drawable/point_focused"
        app:banner_pointGravity="bottom|right"
        app:banner_pointSpacing="5dp"
        app:banner_pointUnfocusedImg="@drawable/point_unfocused"
        app:banner_transitionEffect="accordion" />

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_main_flip"
        style="@style/MatchAuto"
        android:layout_marginTop="10dp"
        app:banner_pageChangeDuration="3000"
        app:banner_pointAutoPlayInterval="2000"
        app:banner_pointContainerBackground="#99FEC2BD"
        app:banner_pointContainerHeight="20dp"
        app:banner_pointContainerWidth="match_parent"
        app:banner_pointEdgeSpacing="10dp"
        app:banner_pointFocusedImg="@drawable/point_focused"
        app:banner_pointGravity="bottom|left"
        app:banner_pointSpacing="5dp"
        app:banner_pointUnfocusedImg="@drawable/point_unfocused"
        app:banner_transitionEffect="flip" />

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_main_rotate"
        style="@style/MatchAuto"
        android:layout_marginTop="10dp"
        app:banner_pointAutoPlayInterval="2000"
        app:banner_pointContainerBackground="#99FEC2BD"
        app:banner_pointContainerHeight="20dp"
        app:banner_pointContainerWidth="match_parent"
        app:banner_pointEdgeSpacing="10dp"
        app:banner_pointFocusedImg="@drawable/shape_point_select"
        app:banner_pointGravity="bottom|center_horizontal"
        app:banner_pointSpacing="5dp"
        app:banner_pointUnfocusedImg="@drawable/shape_point_normal"
        app:banner_transitionEffect="rotate" />

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner_main_alpha"
        style="@style/MatchAuto"
        android:layout_marginTop="10dp"
        app:banner_pointAutoPlayInterval="2000"
        app:banner_pointContainerBackground="#99FEC2BD"
        app:banner_pointContainerHeight="20dp"
        app:banner_pointContainerWidth="match_parent"
        app:banner_pointEdgeSpacing="10dp"
        app:banner_pointFocusedImg="@drawable/point_focused"
        app:banner_pointGravity="bottom|center_horizontal"
        app:banner_pointSpacing="5dp"
        app:banner_pointUnfocusedImg="@drawable/point_unfocused"
        app:banner_transitionEffect="alpha" />

</LinearLayout>